@{
    ViewBag.Title = "AddUser";
}
@model CoffeeShop.Models.User
<script>
    function validatePhone(input){
        var phoneno = /^\d{10}$/;
        if (input.value.match(phoneno))
        {
            return true;
        }
        else
        {
            alert("Invalid phone number.");
            return false;
        }
    }

</script>

<h2>Existing user? Fill out this form.</h2>
<form action="/Home/UserLogin" method="get">

    <div class="form-group">
        <label for="Email">Email Address:</label>
        <input type="email" class="form-control" name="Email" id="email" aria-describedby="emailHelp" required>
    </div>

    <div class="form-group">
        <label for="Password">Password:</label>
        <input type="password" class="form-control" name="Password" id="password" pattern="^(?=.*[0-9])(?=.*[a-zA-Z])[a-zA-Z0-9]{8,16}$" title="Password must be between 8 and 16 characters long" required>
    </div>
    <button type="submit" id="submit" value="Save" class="btn btn-primary">Login</button>
</form>


<h2 id="head1">New User Registration</h2>
<h3 id="head2">Please fill out the following form to register an account: </h3><br />

<form action="/Home/SaveUser" method="post">

    <div class="form-group">
        <label for="FirstName">First Name:</label>
        <input type="text" class="form-control" name="FirstName" id="firstName" pattern="^[A-Za-z]{1,}$" title="Enter a valid name." required>
    </div>

    <div class="form-group">
        <label for="LastName">Last Name:</label>
        <input type="text" class="form-control" name="LastName" id="lastName" pattern="^[A-Za-z]{1,}$" title="Enter a valid name." required>
    </div>

    <div class="form-group">
        <label for="Email">Email Address:</label>
        <input type="email" class="form-control" name="Email" id="email" aria-describedby="emailHelp" required>
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Phone Number:</label>
        <input type="text" class="form-control" name="PhoneNum" id="phoneNum" pattern="^[0-9]{10}$" title="1234567890" maxlength="10" required>
    </div>

    <div class="form-group">
        <label for="Password">Password:</label>
        <input type="password" class="form-control" name="Password" id="password" pattern="^(?=.*[0-9])(?=.*[a-zA-Z])[a-zA-Z0-9]{8,16}$" title="Password must be between 8 and 16 characters long" required>
    </div>
    <button type="submit" id="submit" value="Save" class="btn btn-primary">Register</button>
</form>